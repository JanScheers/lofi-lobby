---
import Layout from '../../components/Layout.astro';
import gamesData from '../../data/games.json';

export function getStaticPaths() {
  return gamesData.games.map((game) => ({
    params: { id: game.id },
    props: { game },
  }));
}

interface Game {
  id: string;
  name: string;
  type: 'html' | 'renpy' | 'rpgmaker' | 'download-only';
  version: string;
  description: string;
  thumbnail: string;
  playable: boolean;
  downloadUrl: string | null;
  lastUpdated: string;
}

const { game } = Astro.props as { game: Game };

const typeLabels: Record<string, string> = {
  'html': 'HTML',
  'renpy': "Ren'Py",
  'rpgmaker': 'RPG Maker',
  'download-only': 'Download Only'
};

const typeLabel = typeLabels[game.type] || game.type;
const gamePath = `/games/${game.id}/`;
---

<Layout title={game.name}>
  <div class="game-page">
    <header class="game-header">
      <a href="/" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to Games
      </a>
      <div class="game-info">
        <h1>{game.name}</h1>
        <div class="meta">
          <span class={`badge badge-${game.type}`}>{typeLabel}</span>
          <span class="version">v{game.version}</span>
          <span class="updated">Updated: {game.lastUpdated}</span>
        </div>
        <p class="description">{game.description}</p>
      </div>
    </header>

    {game.playable ? (
      <div class="game-container" id="game-container">
        <div class="game-controls">
          <button id="fullscreen-btn" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 3 21 3 21 9"></polyline>
              <polyline points="9 21 3 21 3 15"></polyline>
              <line x1="21" y1="3" x2="14" y2="10"></line>
              <line x1="3" y1="21" x2="10" y2="14"></line>
            </svg>
            Full Screen
          </button>
          {game.downloadUrl && (
            <a href={game.downloadUrl} class="btn btn-secondary" download>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" y1="15" x2="12" y2="3"></line>
              </svg>
              Download
            </a>
          )}
        </div>
        <div class="iframe-wrapper" id="iframe-wrapper">
          <iframe
            id="game-iframe"
            src={gamePath}
            title={game.name}
            allowfullscreen
          ></iframe>
          <button id="exit-fullscreen-btn" class="exit-fullscreen-btn" aria-label="Exit full screen">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
        </div>
      </div>
    ) : (
      <div class="download-only-container">
        <div class="download-card">
          <img src={game.thumbnail} alt={`${game.name} thumbnail`} class="download-thumbnail" />
          <div class="download-content">
            <p>This game is available for download only.</p>
            {game.downloadUrl ? (
              <a href={game.downloadUrl} class="btn btn-primary btn-large" download>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                  <polyline points="7 10 12 15 17 10"></polyline>
                  <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Download Game
              </a>
            ) : (
              <p class="no-download">Download not available yet.</p>
            )}
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>

<script>
  const fullscreenBtn = document.getElementById('fullscreen-btn');
  const exitFullscreenBtn = document.getElementById('exit-fullscreen-btn');
  const iframeWrapper = document.getElementById('iframe-wrapper');
  const gameIframe = document.getElementById('game-iframe') as HTMLIFrameElement | null;

  if (fullscreenBtn && exitFullscreenBtn && iframeWrapper && gameIframe) {
    function enterFullscreen() {
      // Try native fullscreen API first
      if (gameIframe?.requestFullscreen) {
        gameIframe.requestFullscreen().catch(() => {
          // Fallback to CSS fullscreen
          iframeWrapper?.classList.add('fullscreen');
          document.body.style.overflow = 'hidden';
        });
      } else {
        // CSS fullscreen fallback
        iframeWrapper?.classList.add('fullscreen');
        document.body.style.overflow = 'hidden';
      }
    }

    function exitFullscreen() {
      if (document.fullscreenElement) {
        document.exitFullscreen();
      }
      iframeWrapper?.classList.remove('fullscreen');
      document.body.style.overflow = '';
    }

    fullscreenBtn.addEventListener('click', enterFullscreen);
    exitFullscreenBtn.addEventListener('click', exitFullscreen);

    // Handle ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && iframeWrapper?.classList.contains('fullscreen')) {
        exitFullscreen();
      }
    });

    // Handle native fullscreen exit
    document.addEventListener('fullscreenchange', () => {
      if (!document.fullscreenElement) {
        iframeWrapper?.classList.remove('fullscreen');
        document.body.style.overflow = '';
      }
    });
  }
</script>

<style>
  .game-page {
    max-width: 100%;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .game-header {
    margin-bottom: 1.5rem;
  }

  .game-info h1 {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }

  .meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .badge {
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 4px;
    text-transform: uppercase;
  }

  .badge-html {
    background-color: #f39c12;
    color: #1a1a2e;
  }

  .badge-renpy {
    background-color: #9b59b6;
    color: #fff;
  }

  .badge-rpgmaker {
    background-color: #3498db;
    color: #fff;
  }

  .badge-download-only {
    background-color: #7f8c8d;
    color: #fff;
  }

  .version,
  .updated {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .description {
    color: var(--color-text-muted);
    max-width: 600px;
  }

  .game-container {
    background-color: var(--color-surface);
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  .game-controls {
    display: flex;
    gap: 0.75rem;
    padding: 1rem;
    border-bottom: 1px solid var(--color-secondary);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    border: none;
    border-radius: var(--border-radius);
    cursor: pointer;
    text-decoration: none;
    transition: background-color var(--transition), transform var(--transition);
  }

  .btn:hover {
    opacity: 1;
    transform: translateY(-1px);
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: #fff;
  }

  .btn-primary:hover {
    background-color: #d63851;
  }

  .btn-secondary {
    background-color: var(--color-secondary);
    color: var(--color-text);
  }

  .btn-secondary:hover {
    background-color: #1a4a7a;
  }

  .btn-large {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
  }

  .iframe-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: #000;
  }

  .iframe-wrapper iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .exit-fullscreen-btn {
    display: none;
    position: absolute;
    top: 1rem;
    right: 1rem;
    background-color: rgba(0, 0, 0, 0.7);
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 44px;
    height: 44px;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    z-index: 10001;
    transition: background-color var(--transition);
  }

  .exit-fullscreen-btn:hover {
    background-color: var(--color-primary);
  }

  /* CSS Fullscreen mode */
  .iframe-wrapper.fullscreen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    aspect-ratio: auto;
    z-index: 10000;
    border-radius: 0;
  }

  .iframe-wrapper.fullscreen .exit-fullscreen-btn {
    display: flex;
  }

  /* Download-only styling */
  .download-only-container {
    display: flex;
    justify-content: center;
    padding: 2rem 0;
  }

  .download-card {
    background-color: var(--color-surface);
    border-radius: var(--border-radius);
    overflow: hidden;
    max-width: 500px;
    width: 100%;
  }

  .download-thumbnail {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .download-content {
    padding: 1.5rem;
    text-align: center;
  }

  .download-content p {
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .no-download {
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>

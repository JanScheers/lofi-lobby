---
import Layout from '../../components/Layout.astro';
import { resolveSiteUrl } from '../../utils/url';
import { gamesData } from '../../data/load-games.mjs';

export function getStaticPaths() {
  return gamesData.games.map((game) => ({
    params: { id: game.id },
    props: { game },
  }));
}

interface Game {
  id: string;
  name: string;
  type: 'html' | 'renpy' | 'rpgmaker' | 'download-only';
  version: string;
  description: string;
  thumbnail: string;
  playable: boolean;
  downloadUrl: string | null;
  lastUpdated: string;
  entryPoint?: string;
}

const { game } = Astro.props as { game: Game };

const typeLabels: Record<string, string> = {
  'html': 'HTML',
  'renpy': "Ren'Py",
  'rpgmaker': 'RPG Maker',
  'download-only': 'Download'
};

const base = (import.meta.env.BASE_URL || '/').replace(/\/$/, '') || '';
const currentPath = Astro.url.pathname;
const typeLabel = typeLabels[game.type] || game.type;
const playUrl = resolveSiteUrl(
  currentPath,
  `/play/${game.id}/${game.entryPoint ?? 'index.html'}`,
  base
);
const thumbnailUrl = resolveSiteUrl(currentPath, game.thumbnail, base);
const downloadUrlResolved = game.downloadUrl
  ? resolveSiteUrl(currentPath, game.downloadUrl, base)
  : null;
const homeHref = resolveSiteUrl(currentPath, '/', base);
---

<Layout title={game.name}>
  <div class="game-page">
    <header class="game-header">
      <a href={homeHref} class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to Games
      </a>
      <div class="game-info">
        <h1>{game.name}</h1>
        <div class="meta">
          <span class={`badge badge-${game.type}`}>{typeLabel}</span>
          <span class="version">v{game.version}</span>
          <span class="updated">Updated: {game.lastUpdated}</span>
        </div>
        <p class="description">{game.description}</p>
      </div>
    </header>

    {game.playable ? (
      <div class="game-container">
        <div class="game-controls">
          <a href={playUrl} class="btn btn-primary btn-large">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="5 3 19 12 5 21 5 3"></polygon>
            </svg>
            Play Game
          </a>
          {downloadUrlResolved && (
            <a href={downloadUrlResolved} class="btn btn-secondary" download>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" y1="15" x2="12" y2="3"></line>
              </svg>
              Download
            </a>
          )}
        </div>
      </div>
    ) : (
      <div class="download-only-container">
        <div class="download-card">
          <img src={thumbnailUrl} alt={`${game.name} thumbnail`} class="download-thumbnail" />
          <div class="download-content">
            <p>This game is available for download only.</p>
            {downloadUrlResolved ? (
              <a href={downloadUrlResolved} class="btn btn-primary btn-large" download>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                  <polyline points="7 10 12 15 17 10"></polyline>
                  <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Download Game
              </a>
            ) : (
              <p class="no-download">Download not available yet.</p>
            )}
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>

<style>
  .game-page {
    max-width: 100%;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .game-header {
    margin-bottom: 1.5rem;
  }

  .game-info h1 {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }

  .meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .badge {
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 4px;
    text-transform: uppercase;
  }

  .badge-html {
    background-color: #f39c12;
    color: #1a1a2e;
  }

  .badge-renpy {
    background-color: #9b59b6;
    color: #fff;
  }

  .badge-rpgmaker {
    background-color: #3498db;
    color: #fff;
  }

  .badge-download-only {
    background-color: #7f8c8d;
    color: #fff;
  }

  .version,
  .updated {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .description {
    color: var(--color-text-muted);
    max-width: 600px;
  }

  .game-container {
    background-color: var(--color-surface);
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  .game-controls {
    display: flex;
    gap: 0.75rem;
    padding: 1rem;
    border-bottom: 1px solid var(--color-secondary);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    border: none;
    border-radius: var(--border-radius);
    cursor: pointer;
    text-decoration: none;
    transition: background-color var(--transition), transform var(--transition);
  }

  .btn:hover {
    opacity: 1;
    transform: translateY(-1px);
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: #fff;
  }

  .btn-primary:hover {
    background-color: #d63851;
  }

  .btn-secondary {
    background-color: var(--color-secondary);
    color: var(--color-text);
  }

  .btn-secondary:hover {
    background-color: #1a4a7a;
  }

  .btn-large {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
  }

  /* Download-only styling */
  .download-only-container {
    display: flex;
    justify-content: center;
    padding: 2rem 0;
  }

  .download-card {
    background-color: var(--color-surface);
    border-radius: var(--border-radius);
    overflow: hidden;
    max-width: 500px;
    width: 100%;
  }

  .download-thumbnail {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .download-content {
    padding: 1.5rem;
    text-align: center;
  }

  .download-content p {
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .no-download {
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>
